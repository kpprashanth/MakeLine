<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >




  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="bottom|clip_horizontal|center|start|clip_vertical|right|center_horizontal|fill|fill_horizontal|top|left|center_vertical|fill_vertical|end"
