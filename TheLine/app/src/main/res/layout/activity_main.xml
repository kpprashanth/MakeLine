          android:layout_alignRight="@+id/cline12"
          android:layout_alignEnd="@+id/cline12"
          android:layout_alignTop="@+id/circle5"
          android:layout_alignBottom="@+id/circle5"
          android:layout_alignLeft="@+id/cline12"
          android:layout_alignStart="@+id/cline12" />


      <ImageView
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:id="@+id/hline31"
          android:src="@drawable/hlong"
          android:layout_alignBottom="@+id/circle7"
          android:layout_alignLeft="@+id/cline22"
          android:layout_alignStart="@+id/cline22"
          android:layout_alignTop="@+id/circle7" />



      <ImageView
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:id="@+id/hline32"
