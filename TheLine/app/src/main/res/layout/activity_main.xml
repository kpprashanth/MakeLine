      <ImageView
          android:layout_width="50dp"
          android:layout_height="100dp"
          android:id="@+id/vline12"
          android:src="@drawable/linelong"
          android:layout_below="@+id/cline11"
          android:layout_alignRight="@+id/circle4"
          android:layout_alignEnd="@+id/circle4"
          android:layout_alignLeft="@+id/circle4"
          android:layout_alignStart="@+id/circle4" />


      <ImageView
          android:layout_width="50dp"
          android:layout_height="100dp"
          android:id="@+id/vline21"
          android:src="@drawable/linelong"
          android:layout_above="@+id/cline22"
          android:layout_centerHorizontal="true" />

      <ImageView
          android:layout_width="50dp"
          android:layout_height="100dp"
          android:id="@+id/vline22"
          android:src="@drawable/linelong"
          android:layout_alignTop="@+id/vline12"
          android:layout_alignLeft="@+id/vline21"
          android:layout_alignStart="@+id/vline21" />

      <ImageView
          android:layout_width="50dp"
          android:layout_height="100dp"
          android:id="@+id/vline31"
          android:src="@drawable/linelong"
          android:layout_below="@+id/hline12"
          android:layout_alignRight="@+id/circle3"
          android:layout_alignEnd="@+id/circle3"
          android:layout_alignLeft="@+id/circle3"
          android:layout_alignStart="@+id/circle3" />

      <ImageView
          android:layout_width="50dp"
          android:layout_height="100dp"
          android:id="@+id/vline32"
          android:src="@drawable/linelong"
          android:layout_below="@+id/cline21"
          android:layout_alignRight="@+id/circle6"
          android:layout_alignEnd="@+id/circle6"
          android:layout_alignLeft="@+id/circle6"
          android:layout_alignStart="@+id/circle6" />


      <!-- CIRCLE          @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ -->


      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"

          android:src="@drawable/circleimg"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="20dp"
          android:layout_marginStart="38dp"
          android:id="@+id/circle1"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle2"
          android:src="@drawable/circleimg"
          android:layout_alignTop="@+id/circle1"
          android:layout_centerHorizontal="true"
          />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle3"
          android:src="@drawable/circleimg"
          android:layout_marginRight="20dp"
          android:layout_marginEnd="42dp"
          android:layout_alignTop="@+id/circle1"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"

          />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle4"
          android:src="@drawable/circleimg"
          android:layout_below="@+id/circle1"
          android:layout_alignLeft="@+id/circle1"
          android:layout_alignStart="@+id/circle1"
          android:layout_marginTop="40dp" />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle5"
          android:src="@drawable/circleimg"
          android:layout_alignTop="@+id/circle4"
          android:layout_centerHorizontal="true"
          />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle6"
          android:src="@drawable/circleimg"
          android:layout_alignTop="@+id/circle5"
          android:layout_alignLeft="@+id/circle3"
          android:layout_alignStart="@+id/circle3" />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle7"
          android:src="@drawable/circleimg"
          android:layout_marginTop="50dp"
          android:layout_below="@+id/circle4"
          android:layout_alignLeft="@+id/circle4"
          android:layout_alignStart="@+id/circle4" />


      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle8"
          android:src="@drawable/circleimg"
          android:layout_alignTop="@+id/circle7"
          android:layout_centerHorizontal="true" />

      <ImageView
          android:layout_width="70dp"
          android:layout_height="90dp"
          android:id="@+id/circle9"
          android:src="@drawable/circleimg"
          android:layout_alignTop="@+id/circle8"
          android:layout_alignLeft="@+id/circle6"
          android:layout_alignStart="@+id/circle6" />





      <Button
          style="?android:attr/buttonStyleSmall"
          android:layout_width="100dp"
          android:layout_height="40dp"
          android:text="RETRY"
          android:id="@+id/refresh"
          android:background="@drawable/mybutton"
          android:layout_below="@+id/hline31"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="42dp" />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="Player 2 Won The Match"
          android:id="@+id/result"
          android:textColor="#008000"
          android:textSize="25dp"
          android:visibility="invisible"
          android:gravity="center"
          android:layout_below="@+id/yelllowhided"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true" />

     <TextView
      android:layout_width="200dp"
      android:layout_height="30dp"
      android:textAppearance="?android:attr/textAppearanceLarge"
